@using ATSystem.Models.ViewModel.Movement
@model ATSystem.Models.ViewModel.Movement.MovementEntryVM
@{
    ViewBag.Title = "Entry";
    Layout = "~/Views/Shared/MainPage.cshtml";
    List<MovementEntryVM> list = ViewBag.CartList;
}

@section MovementEntryCSS{
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
}
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="container">
            <br />
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Asset Movement
                </div>
                <div class="panel-body">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.RegistrationDate, "Date", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.RegistrationDate, new { @class = "form-control datepicker" })
                                    @Html.ValidationMessageFor(model => model.RegistrationDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="panel panel-default">
                        <div class="panel-heading">Asset Information</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.AssetId, "Asset", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.AssetId, new SelectList(Model.AssetLookUp, "Value", "Text"), new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.AssetId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.Code, null, htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.SerialNo, "Serial No", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.SerialNo, new { @class = "form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(model => model.SerialNo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>





                                <div class="col-md-6">
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.BrandName, "Brand", new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.BrandName, new { @class = "form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.CategoryNme, "Catagory", new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.CategoryNme, new { @class = "form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(model => model.CategoryNme, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.GeneralCategoryName, "General Category", new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.GeneralCategoryName, new { @class = "form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(model => model.GeneralCategoryName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading">From</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.OrganizationName, "Organization", new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.OrganizationName, new { @class = "form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(model => model.OrganizationName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.BranchName, "Branch", new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.BranchName, new { @class = "form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(model => model.BranchName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>



                    <div class="panel panel-default">
                        <div class="panel-heading">Move To</div>
                        <div class="panel-body">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.OrganizationId, "Organization", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.OrganizationId, new SelectList(Model.OrganizationLookUp, "Value", "Text"), new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.OrganizationId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.BranchId, "Branch", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(c => c.BranchId, new SelectList(new SelectListItem[] { new SelectListItem() { Value = "", Text = "Select..." } }, "Value", "Text"), new { @class = "form-control" })
                                            @Html.ValidationMessageFor(c => c.BranchId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <input type="submit" formaction="MovementCart" id="cartAdd" value="Add" class="btn btn-success btn-sm pull-right" />
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <hr />
                    @{
                        if (list != null && list.Count > 0)
                        {
                            <div>
                                <table class="table table-striped table-bordered table-responsive">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>General Category</th>
                                            <th>Category</th>
                                            <th>Brand</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var t in list)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.Raw(t.Code)
                                                </td>
                                                <td>@t.GeneralCategoryName</td>
                                                <td>@t.CategoryNme</td>
                                                <td>@t.BrandName</td>
                                                <td>
                                                    @Html.ActionLink("Delete", "ItemDelete", new { id = t.AssetId }, new { @class = "bt btn-danger btn-xs" })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    }

                    <label class="alert alert-success">@ViewBag.message</label>

                    <div class="form-actions" align="right">
                        @if (@Session["Printed"] != null && Session["Printed"].ToString() == "YES")
                        {
                        <input type="submit" formaction="RePrint" formmethod="post" value="RePrint" class="btn btn-warning" />
                        }
                        @Html.ActionLink("View All", "MovementList", "", new { @class = "btn btn-info" })
                        @if (@Session["Approve"].ToString() == "True")
                        {
                            <input type="submit" formaction="Entry" formmethod="post" value="Move" class="btn btn-success" />
                        }
                        @Html.ActionLink("Clear", "Clear", "", new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section MovementEntryJS{


    <script type="text/javascript">
        $(function () { // will trigger when the document is ready
            $('.datepicker').datepicker(); //Initialise any date pickers
        });


        @*$("#cartAdd").click(function (event) {
            alert('OK')
            event.preventDefault();
            var url = '@Url.Action("MovementCart", "Movement")';
            window.location.href = url;
        });*@
    </script>
    <script src="~/Scripts/Mine/MovementEntry.js"></script>

}