
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inbox</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
    <style type="text/css">
        .mb {
            margin-bottom: 5px;
        }
    </style>

</head>

<body>
    <div class="container">
        <div class="panel panel-primary" style="margin-top: 50px;">
            <div class="panel-heading" style="height: 40px">
                <div class="col-md-6">All Users</div>
                <div class="col-md-6">
                    <a href='@Url.Action("Home", "Home")' style="color: white; float: right;margin-left:15px">Home</a>
                    <a href='@Url.Action("ProfileView", "User")' style="color: white; float: right">Profile</a>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <table id="allusers" class="table table-striped table-responsive table-bordered dataTable" style="width: 100%">
                            <thead class="head">
                                <tr>
                                    <th>FullName</th>
                                    <th>Gender</th>
                                    <th>Email</th>
                                    <th>UserName</th>
                                    <th>Designation</th>
                                    <th>PhoneNo</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $("#allusers").dataTable({
            //"dom": '<"pull-left"l><"pull-right"f>rt<"bottom text-center"p>',
            ajax: {
                url: "/JsonLoader/GetAllUsers",
                type: "GET",
                dataType: "JSON"
            },
            //serverSide: "true",
            processing: "true",
            columns: [
                { data: "FullName", "autoWidth": true },
                { data: "Gender", "autoWidth": true },
                { data: "Email", "autoWidth": true },
                { data: "UserName", "autoWidth": true },
                { data: "Designation", "autoWidth": true },
                { data: "PhoneNo", "autoWidth": true }
            ]

        });

    </script>
</body>
</html>
