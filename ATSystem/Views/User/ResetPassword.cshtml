@model ATSystem.Models.ViewModel.ResetPassword.ResetPasswordVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ResetPassword</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <style type="text/css">
        .mn {
            margin-bottom: 5px;
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="header-top" align="center" style="margin-top: 50px">
            @if (Session["organizationName"] != null)
            {
                <h3>@Session["organizationName"].ToString()</h3>
            }
            else
            {
                <h3>Owner Of This System</h3>
            }
        </div>
        @using (Html.BeginForm("ResetPassword", "User"))
        {

            <div class="col-md-offset-3 col-md-6">

                <div class="panel panel-primary">
                    <div class="panel-heading" style="height: 40px">
                        <div class="col-md-6">Reset Password</div>
                        <div class="col-md-6"><a href='@Url.Action("Profile", "User")' style="color: white;float: right">Profile</a>
                        
                        </div>
                    </div>
                    <div class="panel-body">
                        <h4 style="margin-bottom: 20px">UserName : @Session["username"].ToString()</h4>

                        @Html.PasswordFor(m => m.CurrentPassword, new { @placeholder = "Current Password", @class = "form-control mn" })
                        @Html.ValidationMessageFor(c => c.CurrentPassword, "", new { style = "font-size:12px", @class = "text-danger" })

                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control mn" })
                        @Html.ValidationMessageFor(c => c.Password, "", new { style = "font-size:12px", @class = "text-danger" })

                        @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password", @class = "form-control mn" })
                        @Html.ValidationMessageFor(c => c.ConfirmPassword, "", new { style = "font-size:12px", @class = "text-danger" })<br />

                        @if (@ViewBag.success == "Update Successfull")
                        {
                            <label style="color: green">@ViewBag.success</label><br />
                        }
                        else
                        {
                            <label style="color: red">@ViewBag.success</label><br />
                        }
                        <div align="center" class="col-md-offset-3 col-md-6">
                            <input type="submit" class="btn btn-success btn-block" value="Reset" />
                        </div>

                    </div>
                </div>
            </div>
        }
        <div></div>
    </div>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
