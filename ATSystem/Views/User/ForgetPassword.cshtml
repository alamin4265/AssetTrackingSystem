@model ATSystem.Models.Entity.ForgetPassword
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <link href="~/Scripts/Log/loging.css" rel="stylesheet" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm("ForgetPassword", "User"))
    {
        <div class="container con">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3>Password Recovery</h3>
                            </div>
                            <div class="panel-body">
                                @Html.TextBoxFor(c => c.Email, new { @placeholder = "Email Address", @class = "form-control mn" })
                                @Html.ValidationMessageFor(c => c.Email, "", new { style = "color:red;font-size:12px" })
                                
                                @if (@ViewBag.Message == "Invalid Email")
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.Message
                                    </div>
                                }
                                else if (@ViewBag.Message == "Password Has Sent To Your Email Address")
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.Message
                                    </div>
                                }
                                else
                                {

                                }
                                <button type="submit" class="submit">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
            </div>
        </div>
    }
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
