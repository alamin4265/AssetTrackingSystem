@model ATSystem.Models.Entity.LoginUser
@{
    Layout = null;
    ViewBag.msg = ViewBag.message;
}

<html>
<head>
    <title></title>
    <link href="~/Scripts/Log/loging.css" rel="stylesheet" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
@using (Html.BeginForm("Login", "LoginUser"))
{
    <div class="container con">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h2>User Login</h2>
                        </div>
                        <div class="panel-body">
                            @Html.TextBoxFor(c=>c.UserName,new {@placeholder="UserName",@class="form-control mn"})
                            @Html.ValidationMessageFor(c=>c.UserName,"", new { style = "color:red;font-size:12px" })
                            @Html.PasswordFor(c => c.Password, new { @placeholder = "Password", @class = "form-control mn" })
                            @Html.ValidationMessageFor(c => c.Password,"", new { style = "color:red;font-size:12px" })
                            <div style="color: red">
                                @ViewBag.msg
                            </div>
                            
                            <div align="right">
                            <a href='@Url.Action("HomePage", "Home")' class="btn btn-primary">HomePage</a>
                                <button type="submit" class="btn btn-success">Log In</button>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
}
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
