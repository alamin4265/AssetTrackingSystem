
@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Message/Message.cshtml";
}
@section InboxMessageCSS{
    
<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
}
<div class="panel-body">
    <h3 align="center">Inbox</h3>
    
    <div class="col-md-12">
        <table id="inboxmessage" class="table table-striped table-bordered table-hover" style="width: 100%">
            <thead>
            <tr>
                <td>Date</td>
                <td>Title</td>
                <td>Message</td>
                <td>Sender</td>
            </tr>
            </thead>
            <tbody>
            
            </tbody>
        </table>
    </div>
</div>

@section InboxMessageJS{
    
<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>
    
    <script type="text/javascript">

        $(document).ready(function () {


            $("#inboxmessage").dataTable({
                //"dom": '<"pull-left"l><"pull-right"f>rt<"bottom text-center"p>',
                ajax: {
                    url: "/Message/AllInboxMessage",
                    type: "GET",
                    dataType: "JSON"
                },
                //serverSide: "true",
                processing: "true",
                columns: [
                    { data: "Date", "autoWidth": true },
                    { data: "Title", "autoWidth": true },
                    { data: "Details", "autoWidth": true },
                    { data: "MessageFrom", "autoWidth": true }
                    
                ]

            });
        });
</script>

}

